<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/currency_list_item_margin_top"
    android:layout_marginBottom="@dimen/currency_list_item_margin_bottom"
    android:layout_marginStart="@dimen/currency_list_item_margin_start"
    android:layout_marginEnd="@dimen/currency_list_item_margin_end">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/lyt_currency_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_currency_abbreviation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:minHeight="@dimen/currency_list_item_text_view_min_height"
            android:paddingStart="@dimen/currency_list_item_left_padding"
            android:paddingEnd="@dimen/currency_list_item_right_padding"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_currency_name"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:minHeight="@dimen/currency_list_item_text_view_min_height"
            android:paddingStart="@dimen/currency_list_item_left_padding"
            android:paddingEnd="@dimen/currency_list_item_right_padding"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_currency_abbreviation" />

        <TextView
            android:id="@+id/txt_currency_name_bel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:minHeight="@dimen/currency_list_item_text_view_min_height"
            android:paddingStart="@dimen/currency_list_item_left_padding"
            android:paddingEnd="@dimen/currency_list_item_right_padding"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_currency_name" />

        <TextView
            android:id="@+id/txt_currency_name_eng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:minHeight="@dimen/currency_list_item_text_view_min_height"
            android:paddingStart="@dimen/currency_list_item_left_padding"
            android:paddingEnd="@dimen/currency_list_item_right_padding"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_currency_name_bel" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>